<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_post_activity_image"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_launcher"
        android:paddingLeft="5dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/ib_postactivity_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_post_activity_image"
        android:layout_alignTop="@+id/iv_post_activity_image"
        android:layout_margin="10dp"
        android:background="@drawable/cros"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/ib_postactivity_play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/play_icon_small"
        android:padding="10dp"
        android:visibility="gone" />

</RelativeLayout>