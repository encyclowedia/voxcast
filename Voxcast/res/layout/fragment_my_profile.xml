<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.voxcast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notification_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg" >

        <TextView
            style="@style/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="My Profile" />

        <ImageButton
            android:id="@+id/ib_myprofile_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/settings_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llll"
        android:layout_centerHorizontal="true"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp" >

            <com.voxcast.view.CircularProgressView
                android:id="@+id/cpv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:backColor="@color/color_white"
                app:progressColor="@color/color_orange_Aplha"
                app:sWidth="10dp"
                app:viewRadius="100dp" >
            </com.voxcast.view.CircularProgressView>

            <com.voxcast.view.CircularProgressView
                android:id="@+id/cpv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:backColor="@color/color_white"
                app:progressColor="@color/color_orange_Aplha"
                app:sWidth="10dp"
                app:viewRadius="80dp" >
            </com.voxcast.view.CircularProgressView>

            <com.voxcast.view.CircularProgressView
                android:id="@+id/cpv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:backColor="@color/color_white"
                app:progressColor="@color/color_orange_Aplha"
                app:sWidth="10dp"
                app:viewRadius="60dp" >
            </com.voxcast.view.CircularProgressView>

            <com.voxcast.view.CircularImageView
                android:id="@+id/circularImageView1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_img_pic" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relativeLayout1"
            android:layout_alignTop="@+id/relativeLayout1"
            android:layout_toLeftOf="@+id/view" >

            <TextView
                android:id="@+id/txt_userName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView3"
                android:layout_alignRight="@+id/textView1"
                android:ems="6"
                android:gravity="right|center"
                android:lines="2"
                android:maxLines="2"
                android:padding="3dp"
                android:shadowColor="@color/color_white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="Schnider Rosxcsxdvfdsfasdfwse"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_userName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView3"
                android:layout_alignRight="@+id/textView1"
                android:ems="6"
                android:gravity="right|center"
                android:lines="2"
                android:maxLines="2"
                android:padding="3dp"
                android:shadowColor="@color/color_white"
                android:shadowDx="-3"
                android:shadowDy="-3"
                android:shadowRadius="5"
                android:text="Schnider Rosxcsxdvfdsfasdfwse"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_userName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView3"
                android:layout_alignRight="@+id/textView1"
                android:ems="6"
                android:gravity="right|center"
                android:lines="2"
                android:maxLines="2"
                android:padding="3dp"
                android:shadowColor="@color/color_white"
                android:shadowDx="3"
                android:shadowDy="-3"
                android:shadowRadius="5"
                android:text="Schnider Rosxcsxdvfdsfasdfwse"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView3"
                android:layout_alignRight="@+id/textView1"
                android:ems="6"
                android:gravity="right|center"
                android:lines="2"
                android:maxLines="2"
                android:padding="3dp"
                android:shadowColor="@color/color_white"
                android:shadowDx="-3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="Schnider Rosxcsxdvfdsfasdfwse"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_text_post_header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="75 DOWNVOTES"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView1"
                android:layout_alignRight="@+id/textView1"
                android:layout_marginBottom="3dp"
                android:text="50 UPVOTES"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView2"
                android:layout_alignRight="@+id/textView1"
                android:layout_marginBottom="3dp"
                android:text="90 MESSAGES"
                android:textColor="@color/color_white" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>