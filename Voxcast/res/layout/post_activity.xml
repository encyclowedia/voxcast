    <RelativeLayout
        android:id="@+id/rryy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff" >

        <EditText
            android:id="@+id/hhh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:cursorVisible="false"
            android:gravity="top"
            android:hint="What&apos;s new?"
            android:lines="10"
            android:paddingLeft="10dp"
            android:scrollHorizontally="true"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hhh"
            android:layout_alignRight="@+id/hhh"
            android:layout_margin="10dp"
            android:background="#C0C0C0"
            android:padding="6dp"
            android:text="#"
            android:textSize="@dimen/sp_19" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/jjjj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rryy"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/chkFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:button="@drawable/set_custom_checked"
                android:clickable="true" />

            <TextView
                android:id="@+id/textView1q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Post as Anonymous"
                android:textColor="#C0C0C0"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jjjj"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_gallary_image_1"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:padding="@dimen/dp_5"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/button11q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/play_icon_small"
                    android:padding="6dp"
                    android:textSize="@dimen/sp_19" />

                <ImageButton
                    android:id="@+id/ib_postactivity_cross_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/iv_gallary_image_1"
                    android:layout_alignTop="@+id/iv_gallary_image_1"
                    android:layout_margin="10dp"
                    android:background="@drawable/cros"
                    android:padding="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_gallary_image_2"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:padding="@dimen/dp_5"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/ib_postactivity_cross_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/iv_gallary_image_2"
                    android:layout_alignTop="@+id/iv_gallary_image_2"
                    android:layout_margin="10dp"
                    android:background="@drawable/cros"
                    android:padding="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rryyw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_gallary_image_3"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:padding="@dimen/dp_5"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/ib_postactivity_cross_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/iv_gallary_image_3"
                    android:layout_alignTop="@+id/iv_gallary_image_3"
                    android:layout_margin="10dp"
                    android:background="@drawable/cros"
                    android:padding="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_gallary_image_4"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:padding="@dimen/dp_5"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/ib_postactivity_cross_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/iv_gallary_image_4"
                    android:layout_alignTop="@+id/iv_gallary_image_4"
                    android:layout_margin="10dp"
                    android:background="@drawable/cros"
                    android:padding="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#0099FF"
        android:orientation="horizontal"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/video"
                android:onClick="onClickVideo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:background="@drawable/pictures"
                android:onClick="onClickGallary" />
        </LinearLayout>
    </RelativeLayout>
