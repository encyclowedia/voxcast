    <RelativeLayout
        android:id="@+id/rrrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_post_activity_closebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cros" />

        <TextView
            android:id="@+id/tv_post_activity_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imageButton2"
            android:gravity="center"
            android:text="200"
            android:textColor="#C0C0C0"
            android:textSize="@dimen/sp_15" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/post"
            android:gravity="center_horizontal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rryy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff" >

        <EditText
            android:id="@+id/et_post_activity_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:gravity="top"
            android:hint="@string/txt_whats_new"
            android:lines="6"
            android:paddingLeft="10dp"
            android:scrollHorizontally="true"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_post_activity_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_post_activity_msg"
            android:layout_alignRight="@+id/et_post_activity_msg"
            android:layout_margin="3dp"
            android:background="@drawable/hash"
            android:textSize="@dimen/sp_19" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/jjjj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rryy"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/chkFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:button="@drawable/set_custom_checked"
                android:clickable="true" />

            <TextView
                android:id="@+id/textView1q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Post as Anonymous"
                android:textColor="#C0C0C0"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </RelativeLayout>

    <com.voxcast.view.HorizontalListView
        android:id="@+id/hlvCustomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jjjj"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:id="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/post_activity_buttom"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_post_activity_image_capture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab"
            android:padding="10dp"
            android:src="@drawable/ic_camera" />

        <ImageButton
            android:id="@+id/ib_post_activity_video_capture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab"
            android:padding="10dp"
            android:src="@drawable/ic_video" />

        <ImageButton
            android:id="@+id/ib_post_activity_gallary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab"
            android:padding="10dp"
            android:src="@drawable/ic_pictures" />
    </LinearLayout>

</RelativeLayout>